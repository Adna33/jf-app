<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/backgroundwhite"
    tools:context="eestec.jobfairapp.ScheduleActivity"
   >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/raspored"
            android:src="@drawable/eestec_logo_white"
            android:alpha="0.4"
            android:layout_margin="2dp"
            android:scaleType="fitXY" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="25dp"
            android:textColor="@color/eestecTitle"
            android:textStyle="bold"
            android:text="Raspored sajma"
            android:layout_alignLeft="@id/raspored"
            android:layout_alignTop="@id/raspored"
            android:layout_alignRight="@id/raspored"
            android:layout_alignBottom="@id/raspored"
            android:layout_margin="1dp"
            android:gravity="center"
            android:shadowColor="@color/eestecdarkGrey"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/skica"
            android:src="@drawable/eestec_logo_white"
            android:alpha="0.4"
            android:layout_margin="2dp"
            android:scaleType="fitXY" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skica sajma"
            android:id="@+id/textView7"
            android:textSize="25dp"
            android:textColor="@color/eestecTitle"
            android:textStyle="bold"
            android:layout_alignLeft="@id/skica"
            android:layout_alignTop="@id/skica"
            android:layout_alignRight="@id/skica"
            android:layout_alignBottom="@id/skica"
            android:layout_margin="1dp"
            android:gravity="center"
            android:shadowColor="@color/eestecdarkGrey"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </RelativeLayout>


</LinearLayout>