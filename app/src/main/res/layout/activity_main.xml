<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"

    android:background="@color/eestecRed"
    android:orientation="vertical"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/white_jf"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageButton0"
            android:src="@drawable/ic_news_iv"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:background="@drawable/border_top"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageButton"
            android:src="@drawable/ic_info_iv"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:background="@drawable/border_top_bottom_info"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageButton4"
            android:src="@drawable/ic_kompanije_iv"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:background="@drawable/border_bottom" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageButton2"
            android:src="@drawable/ic_raspored_iv"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:background="#C91619" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageButton3"
            android:src="@drawable/ic_mapa_iv"
            android:scaleType="fitStart"
            android:background="@drawable/borders" />
    </LinearLayout>



</LinearLayout>
</ScrollView>